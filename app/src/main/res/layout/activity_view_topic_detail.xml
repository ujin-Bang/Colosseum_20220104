<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ViewTopicDetailActivity">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/imgTopic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000"/>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txtTopicTitle"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="토론 주제 자리"/>

                <TextView
                    android:id="@+id/txtReplyCount"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="댓글 갯수 : 0개"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtSideTitle01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="첫 진영"
                            android:textColor="@color/white"
                            android:textSize="17sp"/>

                        <TextView
                            android:id="@+id/txtSideVoteCount01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0표"
                            android:textColor="@color/white"
                            android:textSize="17sp"/>
                        <Button
                            android:id="@+id/btnVote01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="투표하기"/>




                    </LinearLayout>


                    <TextView
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vs."
                        android:textColor="@color/white"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtSideTitle02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="둘째 진영"
                            android:textColor="@color/white"
                            android:textSize="17sp"/>

                        <TextView
                            android:id="@+id/txtSideVoteCount02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0표"
                            android:textColor="@color/white"
                            android:textSize="17sp"/>

                        <Button
                            android:id="@+id/btnVote02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="투표하기"/>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>



        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/replyListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btnWriteReply"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="end|bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="의견 등록하기"/>


        </FrameLayout>

    </LinearLayout>
</layout>
